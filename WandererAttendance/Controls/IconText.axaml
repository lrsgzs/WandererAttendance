<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:WandererAttendance.Controls"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="40"
             x:Class="WandererAttendance.Controls.IconText">
    <StackPanel Orientation="Horizontal" Spacing="{Binding $parent[local:IconText].Spacing, Mode=OneWay}">
        <local:FluentIcon Glyph="{Binding $parent[local:IconText].Glyph, Mode=OneWay}"
                       VerticalAlignment="Center"
                       FontSize="16">
            <local:FluentIcon.IsVisible>
                <Binding Path="$parent[local:IconText].Glyph" Converter="{x:Static StringConverters.IsNotNullOrEmpty}" />
            </local:FluentIcon.IsVisible>
        </local:FluentIcon>
        <TextBlock Text="{Binding $parent[local:IconText].Text}"
                   VerticalAlignment="Center"
                   LineSpacing="0"
                   Margin="0 0 0 -4"
                   x:Name="TextElement"
                   IsVisible="{Binding $parent[local:IconText].Text, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
    </StackPanel>
</UserControl>
